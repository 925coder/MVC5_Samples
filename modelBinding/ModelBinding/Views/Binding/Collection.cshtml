@model ModelBinding.Models.Department

@{
    ViewBag.Title = "Collection";
}


<h2>Collection</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Project</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div>
            @{
                var employees = Model.Employees.ToList();
            }
            @for (var i = 0; i < employees.Count; i++)
            {
                <fieldset>
                    <h5>Employee @(i + 1)</h5>
                    @Html.HiddenFor(model => employees[i].Id)

                    <div class="form-group">
                        @Html.LabelFor(model => employees[i].FirstName, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => employees[i].FirstName)
                            @Html.ValidationMessageFor(model => employees[i].FirstName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => employees[i].LastName, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => employees[i].LastName)
                            @Html.ValidationMessageFor(model => employees[i].LastName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => employees[i].HireDate, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => employees[i].HireDate)
                            @Html.ValidationMessageFor(model => employees[i].HireDate)
                        </div>
                    </div>
                </fieldset>
            }
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        @if (ViewBag.ShowResults == true)
        {
            <h2>Results</h2>
            @Html.Partial("_modelStateTable")
        }
    </div>
</div>
